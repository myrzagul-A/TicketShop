@model IEnumerable<eTicketShop.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<h1>All Orders</h1>

<p>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.PaymentCode)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.PaidDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.PaymentCode)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.PaidDateTime)
            </td>
          
        </tr>
}
    </tbody>
</table>
